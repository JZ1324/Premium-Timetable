/* Add this at the end of the file */
.import-container {
    position: relative;
    display: inline-block;
    z-index: 10;
}

/* Make sure the input is clickable even when hidden */
.import-container input[type="file"] {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    cursor: pointer !important;
    z-index: 5;
}
