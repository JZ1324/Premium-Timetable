    backdrop-filter: blur(5px);
    -webkit-backdrop-filter: blur(5px);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1000;
    opacity: 1;
    transition: opacity 0.4s cubic-bezier(0.25, 1, 0.5, 1), backdrop-filter 0.5s ease;
}

.task-tracker-container {
    background-color: var(--bg-secondary);
    border-radius: 16px;
    width: 90%;
    max-width: 600px;
    max-height: 80vh;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15);
    display: flex;
    flex-direction: column;
    overflow: hidden;
    transform: translateY(0);
    opacity: 1;
    transition: all 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
    animation: floatIn 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.task-tracker-container-full {
    background-color: var(--bg-secondary);
    border-radius: 12px;
    padding: 20px;
    box-shadow: 0 4px 15px var(--shadow-color);
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
}

.task-tracker-header {
    padding: 15px 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid var(--border-color);
    margin-bottom: 20px;
}

.task-tracker-header h2 {
    margin: 0;
    color: var(--text-primary);
    font-size: 1.5rem;
}

.task-tracker-header .close-button {
    background: none;
    border: none;
    font-size: 1.6rem;
    color: var(--text-secondary);
    cursor: pointer;
    padding: 0 5px;
    transition: color 0.2s ease;
}

.task-tracker-header .close-button:hover {
    color: var(--text-primary);
}

.task-tracker-content {
    padding: 0;
    overflow-y: auto;
    flex: 1;
}

.no-tasks-message {
    text-align: center;
    padding: 30px 0;
    color: var(--text-secondary);
}

.task-item {
    background-color: var(--bg-primary);
    border-radius: 8px;
    padding: 15px;
    margin-bottom: 15px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
    border-left: 4px solid var(--accent-color);
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    animation: fadeIn 0.5s ease forwards;
}

.task-item:hover {
    transform: translateY(-3px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
}

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.task-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10px;
}

.task-header h3 {
    margin: 0;
    font-size: 1.1rem;
    color: var(--text-primary);
}

.delete-task-button {
    background: none;
    border: none;
    font-size: 1.2rem;
    color: var(--text-secondary);
    cursor: pointer;
    padding: 0 5px;
    transition: all 0.3s cubic-bezier(0.25, 1, 0.5, 1);
    border-radius: 50%;
    width: 28px;
    height: 28px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.delete-task-button:hover {
    color: #e74c3c;
    background-color: rgba(231, 76, 60, 0.1);
    transform: rotate(90deg);
}

.task-details p {
    margin: 5px 0;
    color: var(--text-secondary);
    font-size: 0.95rem;
}

.detail-label {
    font-weight: 600;
    margin-right: 5px;
    color: var(--text-primary);
}

.add-task-form {
    background-color: var(--bg-primary);
    border-radius: 8px;
    padding: 20px;
    margin-bottom: 15px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    animation: slideUp 0.5s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
}

.add-task-form h3 {
    margin: 0 0 15px 0;
    font-size: 1.2rem;
    color: var(--text-primary);
}

.form-group {
    margin-bottom: 15px;
}

.form-group label {
    display: block;
    margin-bottom: 5px;
    font-weight: 500;
    color: var(--text-primary);
}

.form-group input,
.form-group textarea {
    width: 100%;
    padding: 8px 12px;
    border-radius: 6px;
    border: 1px solid var(--border-color);
    background-color: var(--bg-secondary);
    color: var(--text-primary);
    font-size: 0.95rem;
    transition: border 0.3s ease, box-shadow 0.3s ease;
}

.form-group textarea {
    resize: vertical;
}

.form-group input:focus,
.form-group textarea:focus {
    box-shadow: 0 0 0 2px rgba(108, 92, 231, 0.2);
}

.form-actions {
    display: flex;
    justify-content: flex-end;
    gap: 10px;
    margin-top: 20px;
}

.form-actions button {
    padding: 8px 15px;
    border-radius: 6px;
    cursor: pointer;
    font-weight: 500;
    border: none;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

.form-actions .save-button {
    background-color: var(--accent-color);
    color: white;
}

.form-actions .save-button:hover {
    background-color: var(--accent-dark, #297fb8);
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 170, 70, 0.3);
}

.form-actions .cancel-button {
    background-color: var(--button-bg);
    color: var(--text-primary);
}

.form-actions .cancel-button:hover {
    background-color: var(--button-hover);
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(255, 100, 100, 0.3);
}

.add-task-button {
    display: block;
    width: 100%;
    padding: 12px;
    background-color: var(--accent-color);
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    text-align: center;
    margin-top: 10px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
}

.add-task-button:hover {
    background-color: var(--accent-dark, #297fb8);
    transform: translateY(-3px) scale(1.02);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
}

.plus-icon {
    font-size: 1.2rem;
    margin-right: 5px;
}

.task-form-container {
    animation: slideIn 0.5s cubic-bezier(0.25, 1, 0.5, 1) forwards;
}

@keyframes slideIn {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes floatIn {
    0% {
        transform: translateY(30px) scale(0.95);
        opacity: 0;
    }
    100% {
        transform: translateY(0) scale(1);
        opacity: 1;
    }
}

.task-form-input, 
.task-form select, 
.task-form textarea {
    width: 100%;
    padding: 12px 15px;
    border: 1px solid var(--border-color);
    border-radius: 8px;
    background-color: var(--bg-primary);
    color: var(--text-primary);
    font-size: 0.95rem;
    margin-bottom: 15px;
    transition: all 0.3s cubic-bezier(0.25, 1, 0.5, 1);
    box-shadow: inset 0 1px 3px rgba(0, 0, 0, 0.05);
}

.task-form-input:focus, 
.task-form select:focus, 
.task-form textarea:focus {
    outline: none;
    border-color: var(--accent-color);
    box-shadow: 0 0 0 3px rgba(var(--accent-color-rgb), 0.2), inset 0 1px 3px rgba(0, 0, 0, 0.05);
    transform: translateY(-1px);
}

.task-form-input::placeholder, 
.task-form select::placeholder, 
.task-form textarea::placeholder {
    color: var(--text-tertiary);
    opacity: 0.7;
}

.task-form-row {
    display: flex;
    gap: 15px;
    margin-bottom: 15px;
    opacity: 0;
    transform: translateY(10px);
    animation: fadeInStaggered 0.5s cubic-bezier(0.25, 1, 0.5, 1) forwards;
}

.task-form-row:nth-child(1) { animation-delay: 0.1s; }
.task-form-row:nth-child(2) { animation-delay: 0.15s; }
.task-form-row:nth-child(3) { animation-delay: 0.2s; }
.task-form-row:nth-child(4) { animation-delay: 0.25s; }

@keyframes fadeInStaggered {
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.task-form-button {
    padding: 12px 20px;
    border-radius: 8px;
    border: none;
    cursor: pointer;
    font-weight: 500;
    transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
    background: var(--button-bg);
    color: var(--button-text);
    font-size: 0.95rem;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
}

.task-form-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
}

.task-form-button:active {
    transform: translateY(0);
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.task-form-button.primary {
    background: linear-gradient(135deg, var(--accent-color), var(--accent-color-dark));
    color: white;
}

.task-form-button.secondary {
    background-color: transparent;
    border: 1px solid var(--border-color);
    color: var(--text-secondary);
}

.task-form-button-group {
    display: flex;
    justify-content: flex-end;
    gap: 10px;
    margin-top: 15px;
}

/* Task Grid Layout */
.tasks-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 16px;
    width: 100%;
    margin-bottom: 20px;
}

/* Priority styling */
.task-item.priority {
    border-left: 4px solid #ff9800;
    box-shadow: 0 4px 12px rgba(255, 152, 0, 0.15);
    position: relative;
    animation: priorityPulse 2s infinite alternate ease-in-out;
}

.task-item.priority::before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 0;
    height: 0;
    border-style: solid;
    border-width: 0 24px 24px 0;
    border-color: transparent #ff9800 transparent transparent;
    z-index: 1;
}

@keyframes priorityPulse {
    from {
        box-shadow: 0 4px 12px rgba(255, 152, 0, 0.15);
    }
    to {
        box-shadow: 0 4px 15px rgba(255, 152, 0, 0.3);
    }
}

/* Due date urgency levels */
.task-item.overdue {
    border-left: 4px solid #f44336;
    background-color: rgba(244, 67, 54, 0.05);
}

.task-item.due-today {
    border-left: 4px solid #ff5722;
    background-color: rgba(255, 87, 34, 0.05);
}

.task-item.due-soon {
    border-left: 4px solid #ff9800;
    background-color: rgba(255, 152, 0, 0.05);
}

.task-item.approaching {
    border-left: 4px solid #ffc107;
    background-color: rgba(255, 193, 7, 0.05);
}

.urgency-badge {
    display: inline-block;
    background-color: #ff9800;
    color: white;
    font-size: 0.75rem;
    padding: 2px 6px;
    border-radius: 4px;
    margin-left: 8px;
    font-weight: 600;
}

.urgency-badge.overdue {
    background-color: #f44336;
}

/* Priority button */
.task-actions {
    display: flex;
    align-items: center;
    gap: 8px;
}

.priority-button {
    background: transparent;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 28px;
    height: 28px;
    border-radius: 50%;
    transition: all 0.3s cubic-bezier(0.25, 1, 0.5, 1);
    opacity: 0.5;
    font-size: 0.9rem;
}

.priority-button:hover {
    background-color: rgba(0, 0, 0, 0.05);
    transform: scale(1.1);
    opacity: 0.8;
}

.priority-button.active {
    opacity: 1;
    transform: scale(1.1);
    animation: rotate 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
}

@keyframes rotate {
    0% { transform: rotate(-45deg) scale(0.8); }
    100% { transform: rotate(0) scale(1.1); }
}

/* Priority checkbox in form */
.priority-checkbox-container {
    margin: 15px 0;
}

.checkbox-label {
    display: flex;
    align-items: center;
    gap: 8px;
    cursor: pointer;
}

.checkbox-text {
    font-size: 0.95rem;
    color: var(--text-primary);
}

/* Media queries for responsive grid */
@media (max-width: 768px) {
    .tasks-grid {
        grid-template-columns: 1fr;
    }
}